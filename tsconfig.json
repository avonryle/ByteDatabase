{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ESNext"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "alwaysStrict": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "newLine": "crlf",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "incremental": true,
    "skipLibCheck": true,
    "noEmitHelpers": true,
    "rootDir": "./lib",
    "outDir": "./dist"
  }
}
